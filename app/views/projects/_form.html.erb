<% button_name = project.persisted? ? "Edit project" : "Create a project" %>

<%= form_for project do |f| %>
  <div>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <div>
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit button_name %>
<% end %>
